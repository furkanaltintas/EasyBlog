@model ArticleDto

<div class="col-lg-12">
    <div class="blog-post">
        <div class="blog-thumb">
            <img src="~/images/@Model.Image.FileName" alt="@Model.Image.FileName">
        </div>
        <div class="down-content">
            <a href="post-details.html"><h4>@Model.Title</h4></a>
            <ul class="post-info">
                <li><a href="#">@Model.User.FirstName @Model.User.LastName</a></li>
                <li><a href="#">@Model.CreatedDate.ToString("dd/MM/yyyy")</a></li>
                <li><i class="fa-solid fa fa-eye"></i> @Model.ViewCount</li>
            </ul>
            <p>
                @Model.Content
            </p>
            <div class="post-options">
                <div class="row">
                    <div class="col-6">
                        <ul class="post-tags">
                            <li><i class="fa fa-tags"></i></li>
                            <li><a href="#">@Model.Category.Name</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>