@model List<ArticleListDto>

<div class="container-xxl flex-grow-1 container-p-y">
    @await Component.InvokeAsync("DashboardTitle")
    <div class="card">
        <div class="table-responsive text-nowrap m-5">
            <table class="table table-bordered" id="easyTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var article in Model)
                    {
                        <tr name="@article.Id">
                            <td>@article.Title</td>
                            <td>@article.Category.Name</td>
                            <td>@article.CreatedDate.ToShortDateString()</td>
                            <td>@article.CreatedBy</td>
                            <td>
                                <a asp-action="UndoDelete" asp-route-articleId="@article.Id" data-id="@article.Id" class="btn btn-warning btn-sm">
                                    <i class="bx bx-undo"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/tableIndex.js" type="application/ecmascript"></script>
}
