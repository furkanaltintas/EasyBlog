@using EasyBlog.Web.Helpers

@{
    var controllerName = ViewContext.RouteData.Values["controller"]?.ToString();
    var actionName = ViewContext.RouteData.Values["action"]?.ToString();
}

<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">@DashboardTitleHelper.GetTranslatedControllerName(controllerName, actionName) /</span> @DashboardTitleHelper.GetTranslatedActionName(controllerName, actionName)</h4>