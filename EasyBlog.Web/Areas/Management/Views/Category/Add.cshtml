@model CategoryAddDto

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Kategori Yönetimi /</span> Kategori Ekleme</h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header">Ekleme</h5>
                <form asp-controller="Category" asp-action="Add" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Name" class="form-label">Başlık</label>
                            <input asp-for="Name" type="text" class="form-control" placeholder="Lütfen kategori ismini giriniz" aria-describedby="defaultFormControlHelp" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Kategori Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>