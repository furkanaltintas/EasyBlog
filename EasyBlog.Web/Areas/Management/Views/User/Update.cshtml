@model UserUpdateDto

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Kullanıcı Yönetimi /</span> Kullanıcı Güncelleme</h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header">Güncelleme</h5>
                <form asp-controller="User" asp-action="Update" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="FirstName" class="form-label">Ad</label>
                            <input asp-for="FirstName" type="text" class="form-control" placeholder="Ad" aria-describedby="defaultFormControlHelp" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="LastName" class="form-label">Soyad</label>
                            <input asp-for="LastName" type="text" class="form-control" placeholder="Soyad" aria-describedby="defaultFormControlHelp" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Email" class="form-label">Email Adresi</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Email Adresi" aria-describedby="defaultFormControlHelp" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="form-label">Telefon Numarası</label>
                            <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="Telefon Numarası" aria-describedby="defaultFormControlHelp" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="RoleId" class="form-label">Roller</label>
                            <select asp-for="RoleId" asp-items="@(new SelectList(Model.Roles, "Id", "Name"))" class="form-control"></select>
                            <span asp-validation-for="RoleId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Kullanıcı Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>