@using EasyBlog.Web.Constants
@model List<UserListDto>

<div class="container-xxl flex-grow-1 container-p-y">
    @await Component.InvokeAsync("DashboardTitle")
    <div class="card">
        <div class="table-responsive text-nowrap m-5">
            <table class="table table-bordered" id="easyTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Ad Soyad</th>
                        <th>Email</th>
                        <th>Telefon Numarası</th>
                        <th>Email Doğrulaması</th>
                        <th>Roller</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var user in Model)
                    {
                        <tr name="@user.Id">
                            <td>@user.FirstName @user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.PhoneNumber</td>
                            <td>@(user.EmailConfirmed ? EmailConfirmedConstants.Verified : EmailConfirmedConstants.Unverified)</td>
                            <td>@user.Role</td>
                            <td>
                                <a asp-action="Update" asp-route-userId="@user.Id" data-id="@user.Id" class="btn btn-primary btn-sm">
                                    <i class="bx bxs-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-userId="@user.Id" data-id="@user.Id" class="btn btn-danger btn-sm">
                                    <i class="bx bxs-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>Ad Soyad</th>
                        <th>Email</th>
                        <th>Telefon Numarası</th>
                        <th>Email Doğrulaması</th>
                        <th>Bağlantı Hatası</th>
                        <th>Roller</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
    <a asp-action="Add" class="btn btn-success mt-2">Kullanıcı Ekle</a>
</div>

@section Scripts {
    <script src="~/js/tableIndex.js" type="application/ecmascript"></script>
}
