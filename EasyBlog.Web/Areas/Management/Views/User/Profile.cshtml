@model UserProfileDto

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Profil Ayarları /</span> Profilim</h4>

    <div class="row">
        <div class="col-md-12">
            <ul class="nav nav-pills flex-column flex-md-row mb-3">
                <li class="nav-item">
                    <a class="nav-link active" href="javascript:void(0);"><i class="bx bx-user me-1"></i> Account</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="pages-account-settings-notifications.html"><i class="bx bx-bell me-1"></i> Notifications</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="pages-account-settings-connections.html"><i class="bx bx-link-alt me-1"></i> Connections</a>
                </li>
            </ul>
            <div class="card mb-4">
                <h5 class="card-header">Profil Detayları</h5>
                <!-- Account -->
                <form asp-action="Profile" method="post" enctype="multipart/form-data">
                    <div class="card-body">
                        <div class="d-flex align-items-start align-items-sm-center gap-4">
                            <img src="~/images/@Model.Image.FileName"
                                 alt="user-avatar"
                                 class="d-block rounded"
                                 height="100"
                                 width="100"
                                 id="uploadedAvatar" />
                            <div class="button-wrapper">
                                <label class="btn btn-primary me-2 mb-4" tabindex="0">
                                    <span class="d-none d-sm-block">Yeni fotoğraf yükle</span>
                                    <i class="bx bx-upload d-block d-sm-none"></i>
                                    <input asp-for="Photo"
                                           type="file"
                                           id="upload"
                                           class="account-file-input"
                                           hidden
                                           accept="image/*" />
                                </label>
                            </div>
                        </div>
                    </div>
                    <hr class="my-0" />
                    <div class="card-body">
                        <div class="row">
                            <input asp-for="Id" type="hidden" />
                            <div class="mb-3 col-md-6">
                                <label asp-for="FirstName" class="form-label">Ad</label>
                                <input asp-for="FirstName" class="form-control" autofocus />
                            </div>
                            <div class="mb-3 col-md-6">
                                <label asp-for="LastName" class="form-label">Soyad</label>
                                <input asp-for="LastName" class="form-control" />
                            </div>
                            <div class="mb-3 col-md-6">
                                <label asp-for="Email" class="form-label">Email Adresi</label>
                                <input asp-for="Email" class="form-control" type="text" />
                            </div>
                            <div class="mb-3 col-md-6">
                                <label asp-for="PhoneNumber" class="form-label">Telefon Numarası</label>
                                <input asp-for="PhoneNumber" class="form-control" />
                            </div>
                            <div class="mb-3 col-md-6">
                                <label asp-for="CurrentPassword" class="form-label">Mevcut Parola</label>
                                <input asp-for="CurrentPassword" type="password" class="form-control" />
                            </div>
                            <div class="mb-3 col-md-6">
                                <label asp-for="NewPassword" class="form-label">Yeni Parola</label>
                                <input asp-for="NewPassword" type="password" class="form-control" />
                            </div>
                        </div>
                        <div class="mt-2">
                            <button type="submit" class="btn btn-primary me-2">Profili Güncelle</button>
                        </div>
                    </div>
                </form>
                <!-- /Account -->
            </div>


            <!-- Hesap Silme -->
            <div class="card">
                <h5 class="card-header">Hesap Silme</h5>
                <div class="card-body">
                    <div class="mb-3 col-12 mb-0">
                        <div class="alert alert-warning">
                            <h6 class="alert-heading fw-bold mb-1">Hesabınızı silmek istediğinizden emin misiniz?</h6>
                            <p class="mb-0">Hesabınızı sildikten sonra geri dönüş yoktur. Lütfen emin olun.</p>
                        </div>
                    </div>
                    <form id="formAccountDeactivation" onsubmit="return false">
                        <div class="form-check mb-3">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="accountActivation"
                                   id="accountActivation" />
                            <label class="form-check-label" for="accountActivation">Hesabımın devre dışı bırakılmasını onaylıyorum</label>
                        </div>
                        <button type="submit" class="btn btn-danger deactivate-account">Hesabı Devre Dışı Bırak</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>